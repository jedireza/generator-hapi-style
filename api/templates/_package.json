{
  "name": "<%= appName %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/nodemon/bin/nodemon.js server",
    "test": "./node_modules/lab/bin/lab -c -L",
    "watch": "onchange '*.js' 'test/**/*.js' -- npm test",
    "test-cover": "./node_modules/lab/bin/lab -c -r html -o ./test/artifacts/coverage.html && open ./test/artifacts/coverage.html"
  },
  "repository": {
    "type": "git",
    "url": "<%= gitRepo %>"
  },
  "author": "<%= author %><% if (authorEmail) { %> <<%= authorEmail %>><% } %>",
  "license": "<%= license %>",
  "bugs": {
    "url": "<%= bugsUrl %>"
  },
  "homepage": "<%= homepageUrl %>",
  "dependencies": {
    "confidence": "^1.x.x",
    "glue": "^2.x.x",
    "hapi": "^8.x.x",
    "hoek": "^2.x.x"
  },
  "devDependencies": {
    "code": "^1.x.x",
    "lab": "^5.x.x",
    "nodemon": "^1.x.x",
    "onchange": "^2.x.x"
  }
}
